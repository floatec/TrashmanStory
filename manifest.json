{
  "manifest_version": 2,

  "name": "Trashmen Stories",
  "description": "This extension maximizes your internet privacy",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Start trashing!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
	"scripts": ["background.js"],
	"persistent": false
	}
}
